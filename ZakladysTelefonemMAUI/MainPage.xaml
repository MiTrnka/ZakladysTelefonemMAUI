<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ZakladysTelefonemMAUI"
             x:Class="ZakladysTelefonemMAUI.MainPage"
             x:DataType="local:MainPage">
    <ScrollView>

        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Informace o zařízení"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label x:Name="LabelModel" Text="Model telefonu: " FontSize="18"/>
            <Label x:Name="LabelVyrobce" Text="Výrobce: " FontSize="18"/>
            <Label x:Name="LabelVerzeOS" Text="Verze systému: " FontSize="18"/>
            <Label x:Name="LabelTypZarizeni" Text="Typ zařízení: " FontSize="18"/>
            <Label x:Name="LabelPripojeni" Text="Přístup k internetu: " FontSize="18"/>
            <Label x:Name="LabelTypPripojeni" Text="Typ připojení: " FontSize="18"/>


            <Label
                Text="Geolokace (GPS)"
                FontSize="32"
                HorizontalOptions="Center"
                Margin="0,20,0,0"/>

            <Button
                x:Name="BtnZiskejPolohu"
                Text="Zjisti moji polohu"
                Clicked="OnZiskejPolohuClicked"
                HorizontalOptions="Center" />

            <Label x:Name="LabelPoloha" Text="Poloha: " FontSize="18"/>


            <Label
                Text="Fotoaparát a Galerie"
                FontSize="32"
                HorizontalOptions="Center"
                Margin="0,20,0,0"/>

            <Button
                x:Name="BtnVyfotit"
                Text="Vyfotit fotku"
                Clicked="OnVyfotitClicked"
                HorizontalOptions="Center" />

            <Button
                x:Name="BtnVybratZGalerie"
                Text="Vybrat z galerie"
                Clicked="OnVybratZGalerieClicked"
                HorizontalOptions="Center" />

            <Button
                x:Name="BtnSdiletObrazek"
                Text="Sdílet obrázek"
                Clicked="OnSdiletObrazekClicked"
                HorizontalOptions="Center"
                IsEnabled="False" />

            <Image
                x:Name="ImgFotka"
                Source="dotnet_bot.png"
                HeightRequest="200"
                WidthRequest="200"
                HorizontalOptions="Center"
                Margin="0,10,0,0"/>


            <Label
                Text="Kontakty a Volání"
                FontSize="32"
                HorizontalOptions="Center"
                Margin="0,20,0,0"/>

            <Button
                x:Name="BtnVybratKontakt"
                Text="Vybrat kontakt"
                Clicked="OnVybratKontaktClicked"
                HorizontalOptions="Center" />

            <Label
                x:Name="LabelKontaktInfo"
                Text="Vybraný kontakt: "
                FontSize="18"
                HorizontalOptions="Center"
                Margin="0,10,0,0"/>

            <Button
                x:Name="BtnVytocitCislo"
                Text="Vytočit číslo"
                Clicked="OnVytocitCisloClicked"
                HorizontalOptions="Center"
                IsEnabled="False" />

            <Label
                Text="Lokální Notifikace"
                FontSize="32"
                HorizontalOptions="Center"
                Margin="0,20,0,0"/>

            <Button
                x:Name="BtnNotifikace"
                Text="Notifikace"
                Clicked="OnNotifikaceClicked"
                HorizontalOptions="Center" />


            <Label
                Text="Kompas"
                FontSize="32"
                HorizontalOptions="Center"
                Margin="0,20,0,0"/>

            <Label
                x:Name="LabelStrelka"
                Text="↑"
                FontSize="100"
                HorizontalOptions="Center" />

            <Label
                x:Name="LabelKompasHodnota"
                Text="Natočení: 0°"
                FontSize="18"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>